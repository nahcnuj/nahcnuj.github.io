<head prefix="og: http://ogp.me/ns# profile: http://ogp.me/ns/profile# article: http://ogp.me/ns/article#">
  <meta charset="utf-8">
  <title>{{ title }}{{^overwrite_title}} | {{ i18n.site_name }}{{/overwrite_title}}</title>
  <meta name="description" content="{{ description }}">
  <meta property="og:title" content="{{ title }}">
  <meta property="og:description" content="{{ description }}">
  {{#i18n.meta_ogp}}
    {{^hidden}}
      <meta property="og:{{ property }}" content="{{ content }}">
    {{/hidden}}
  {{/i18n.meta_ogp}}
  {{#meta_ogp}}
    <meta property="og:type" content="{{ type }}">
    <meta property="og:url" content="{{ site.host_url }}{{ path }}">
    {{#image}}
      <meta property="og:image" content="{{ site.img_host_url }}{{ path }}">
      <meta property="og:image:alt" content="{{ alt }}">
      <meta property="twitter:card" content="summary_large_image">
    {{/image}}
    {{^image}}
      <meta property="og:image" content="{{ site.img_host_url }}/author.jpg">
      <meta property="og:image:alt" content="{{ i18n.dict.author_image_alt }}">
      <meta property="twitter:card" content="summary">
    {{/image}}
    <meta property="twitter:site" content="@{{ site.username }}">
    <meta property="twitter:creator" content="@{{ site.username }}">
  {{/meta_ogp}}
  {{#profile_ogp}}
    <meta property="profile:{{ property }}" content="{{ content }}">
  {{/profile_ogp}}
  {{#article_ogp}}
    <meta property="article:author" content="{{ i18n.dict.author_name }}">
    <meta property="article:published_time" content="{{ published_time }}">
    <meta property="article:modified_time" content="{{ modified_time }}">
    <meta property="article:section" content="{{ section }}">
    {{#tag}}
      <meta property="article:tag" content="{{ name }}">
    {{/tag}}
  {{/article_ogp}}
  <meta name="viewport" content="width=device-width,initial-scale=1">
  <link rel="canonical" href="{{ site.host_url }}{{ meta_ogp.path }}">
  <link rel="dns-prefetch" href="{{ site.img_host_url }}">
  <link rel="preconnect" href="https://fonts.gstatic.com/" crossorigin>
  <script src="https://kit.fontawesome.com/08f6e2d41a.js" crossorigin="anonymous"></script>
  <link rel="stylesheet" href="/css/common.css">
  {{#custom_css}}
    <link rel="stylesheet" href="{{ href }}">
  {{/custom_css}}
  {{> gtag }}
</head>
