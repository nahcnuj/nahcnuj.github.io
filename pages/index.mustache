---
nolayout: true
title: '{{ i18n.dict.site_title }}'
description: '{{ i18n.dict.site_description }}'
overwrite_title: true
custom_css:
  href: /css/index.css
meta_ogp:
  type: website
  path: /
---
<!DOCTYPE html>
<html lang="{{ language }}">
  {{> head }}
  <body>
    <header>
      <div id="title">
        <h1>{{ site.author }}</h1>
        <p>
          A web engineer <span class="nobr">at <a href="https://www.seesaa.co.jp/" target="_blank">Seesaa Inc.</a></span>
        </p>
      </div>
      <div id="photo">
        <img src="{{ site.img_host_url }}/author.jpg" width="200" height="200" alt="{{ i18n.dict.author_image_alt }}">
      </div>
    </header>
    <main>
      <nav id="main-contents">
        <ul>
          <li>
            <a href="/profile.html">
              <div class="icon"><i class="fas fa-address-card"></i></div>
              <div>{{ i18n.dict.self_introduction }}</div>
            </a>
          </li>
          <li>
            <a href="/diary/">
              <div class="icon"><i class="fas fa-calendar-day"></i></div>
              <div>{{ i18n.dict.diary }}</div>
            </a>
          </li>
          <li>
            <a href="/works/">
              <div class="icon"><i class="fas fa-shapes"></i></div>
              <div>
                {{ i18n.dict.works }}
              </div>
            </a>
          </li>
          <li>
            <a href="/contact.html">
              <div class="icon"><i class="fas fa-paper-plane"></i></div>
              <div>{{ i18n.dict.contact_page_head_text }}</div>
            </a>
          </li>
        </ul>
      </nav>
    </main>
    <aside>
      <nav>
        <ul>
          {{#i18n.sns_links}}
            <li>
              <a href="{{ href }}">
                {{#fontawesome_icon}}
                  <i class="fab fa-{{ name }}" style="color:{{ color }}" title="{{ title }}"></i>
                {{/fontawesome_icon}}
                {{#img_icon}}
                  <img id="{{ id }}" src="{{ src }}" width="{{ size }}" height="{{ size }}" alt="{{ title }}" title="{{ title }}">
                {{/img_icon}}
              </a>
            </li>
          {{/i18n.sns_links}}
        </ul>
      </nav>
    </aside>
    {{> page-footer }}
  </body>
</html>
