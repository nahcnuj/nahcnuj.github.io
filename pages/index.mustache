---
title: '{{ i18n.dict.site_title }}'
description: '{{ i18n.dict.site_description }}'
overwrite_title: true
custom_header: true
custom_content: true
custom_css:
  href: /css/index.css
meta_ogp:
  type: website
  path: /
---
<header>
  <div id="title">
    <h1>{{ site.author }}</h1>
    <p>
      A web engineer <span class="nobr">at <a href="https://www.seesaa.co.jp/" target="_blank">Seesaa Inc.</a></span>
    </p>
  </div>
  <div id="photo">
    <img src="{{ site.img_host_url }}/author.jpg" width="200" height="200" alt="{{ i18n.dict.author_image_alt }}">
  </div>
</header>
<main>
  <nav id="main-contents">
    <ul>
      {{#i18n.main_contents}}
        <li>
          <a href="{{ href }}">
            <i class="fas fa-{{ icon_name }}" title="{{ title }}"></i>
            <div>
              {{ title }}
              {{#under_construction}}
                <i class="fas fa-exclamation-triangle" style="color:#F90" title="{{ i18n.dict.under_construction }}"></i>
              {{/under_construction}}
            </div>
          </a>
        </li>
      {{/i18n.main_contents}}
    </ul>
  </nav>
</main>
<aside>
  <nav>
    <ul>
      {{#i18n.sns_links}}
        <li>
          <a href="{{ href }}">
            {{#fontawesome_icon}}
              <i class="fab fa-{{ name }}" style="color:{{ color }}" title="{{ title }}"></i>
            {{/fontawesome_icon}}
            {{#img_icon}}
              <img id="{{ id }}" src="{{ src }}" width="{{ size }}" height="{{ size }}" alt="{{ title }}" title="{{ title }}">
            {{/img_icon}}
          </a>
        </li>
      {{/i18n.sns_links}}
    </ul>
  </nav>
</aside>
