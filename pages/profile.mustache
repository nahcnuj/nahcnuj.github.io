---
title: Junichi Hayashi's Profile
custom_css:
  - href: /css/history-table.css
  - href: /css/profile-table.css
---
<main>
  <article>
    <header>
      <h2>{{ i18n.dict.profile_page_head_text }}</h2>
      <p>{{ i18n.dict.profile_page_lead_text }}</p>
    </header>

    <table class="profile">
      {{#i18n.profile}}
      <tr>
        <th>{{ key }}</th>
        <td>{{ value }}</td>
      </tr>
      {{/i18n.profile}}
    </table>

    <h3>{{ i18n.dict.biography }}</h3>
    <table class="history">
      {{#i18n.biography}}
      <tr>
        <th><span>{{ date }}</span></th>
        <td>{{ event }}</td>
      </tr>
      {{/i18n.biography}}
      <tr>
        <th>{{ i18n.dict.now }}</th>
        <td></td>
      </tr>
    </table>
  </article>
</main>
