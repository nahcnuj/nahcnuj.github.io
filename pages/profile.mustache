---
title: Junichi Hayashi's Profile
description: '{{ i18n.dict.profile_page_description }}'
headline: '{{ i18n.dict.profile_page_head_text }}'
lead: '{{ i18n.dict.profile_page_lead_text }}'
custom_css:
  - href: /css/history-table.css
  - href: /css/profile-table.css
meta_ogp:
  type: profile
  path: /profile.html
profile_ogp:
  - property: first_name
    content: '{{ i18n.dict.author_first_name }}'
  - property: last_name
    content: '{{ i18n.dict.author_last_name }}'
  - property: username
    content: nahcnuj
twitter_ogp:
  card_type: summary_large_image
---
<table class="profile">
  {{#i18n.profile}}
  <tr>
    <th>{{ key }}</th>
    <td>{{ value }}</td>
  </tr>
  {{/i18n.profile}}
</table>

<h3>{{ i18n.dict.biography }}</h3>
<table class="history">
  {{#i18n.biography}}
  <tr>
    <th><span><time datetime="{{ date }}">{{ date }}</time></span></th>
    <td>{{ event }}</td>
  </tr>
  {{/i18n.biography}}
  <tr>
    <th>{{ i18n.dict.now }}</th>
    <td></td>
  </tr>
</table>

<h3>{{ i18n.dict.skill }}</h3>
<ul>
  {{#i18n.skills}}
  <li>
    {{ name }}
    <ul>
      {{#certifications}}
      <li>
        {{ title }}
        {{ grade }}
        {{#when}}
        （<time datetime="{{ datetime }}">{{ text }}</time>）
        {{/when}}
      </li>
      {{/certifications}}
    </ul>
  </li>
  {{/i18n.skills}}
</ul>
