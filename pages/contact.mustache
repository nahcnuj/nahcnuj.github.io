---
title: Contact information
description: '{{ i18n.dict.contact_page_description }}'
headline: '{{ i18n.dict.contact_page_head_text }}'
lead: '{{ i18n.dict.contact_page_lead_text }}'
meta_ogp:
  - property: type
    content: website
  - property: image
    content: '{{ site.img_host_url }}/author.jpg'
  - property: image:alt
    content: '{{ i18n.dict.author_image_alt }}'
  - property: url
    content: '{{ site.host_url }}/contact.html'
---
<dl>
  {{#site.contact_list}}
  <dt>{{ title }}</dt>
  <dd><a href="{{ href }}">{{ address }}</a></dd>
  {{/site.contact_list}}
</dl>
