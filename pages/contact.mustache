---
title: Contact information
description: '{{ i18n.dict.contact_page_description }}'
meta_ogp:
  basic:
    - property: type
      content: website
    - property: image
      content: '{{ site.host_url }}/img/author.jpg'
    - property: image:alt
      content: '{{ i18n.dict.author_image_alt }}'
    - property: url
      content: '{{ site.host_url }}/contact.html'
---
<main>
  <article>
    <header>
      <h2>{{ i18n.dict.contact_page_head_text }}</h2>
      <p>{{ i18n.dict.contact_page_lead_text }}</p>
    </header>

    <dl>
      {{#site.contact_list}}
      <dt>{{ title }}</dt>
      <dd><a href="{{ href }}">{{ address }}</a></dd>
      {{/site.contact_list}}
    </dl>
  </article>
</main>
